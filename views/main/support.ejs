<% include ../partials/header %>

  <div class="content-header-left col-md-8 col-12 mb-2 breadcrumb-new">
    <h3 class="content-header-title mb-0 d-inline-block">Open Ticket</h3>
    <div class="row breadcrumbs-top d-inline-block">
      <div class="breadcrumb-wrapper col-12">
      </div>
    </div>
  </div>
<!-- Form control repeater section start -->
<section id="form-control-repeater">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-content collapse show">
                    <div class="card-body">

                        <form class="form row">
                            <div class="form-group col-md-6 mb-2">
                            	<label label class="label-control" for="projectinput1"><strong>Name</strong></label>
                                <input type="text" class="form-control" placeholder="Name" name="name">
                            </div>
                            <div class="form-group col-md-6 mb-2">
                            	<label label class="label-control" for="projectinput1"><strong>Email Address</strong></label>
                                <input type="email" class="form-control" placeholder="Email Address" name="email">
                            </div>
                            <div class="form-group col-md-12 mb-2">
                            	<label label class="label-control" for="projectinput1"><strong>Subject</strong></label>
                                <input type="text" class="form-control" placeholder="Subject" name="subject">
                            </div>
                            <div class="form-group col-md-6 mb-2">
                            	<label label class="label-control" for="projectinput1"><strong>Priority</strong></label>
                                <select name="priority" class="form-control">
                                    <option value="none" selected="" disabled="">Not Specified</option>
                                    <option value="design">High</option>
                                    <option value="development">Medium</option>
                                    <option value="development">Low</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6 mb-2">
                            	<label label class="label-control" for="projectinput1"><strong>Department</strong></label>
                                <select name="department" class="form-control">
                                    <option value="0" selected="" disabled="">Not Specified</option>
                                    <option value="">Technical</option>
                                    <option value="">Sales</option>
                                </select>
                            </div>
                            <div class="form-group col-12 mb-2">
                            	<label label class="label-control" for="projectinput1"><strong>Message</strong></label>
                                <textarea rows="5" class="form-control" name="comment" placeholder="Message"></textarea>
                            </div>
                             <div class="form-group col-12 mb-2 file-repeater">
                                <div data-repeater-list="repeater-list">
                                    <div data-repeater-item>
                                        <div class="row mb-1">
                                            <div class="col-9 col-xl-10">
                                                <label class="file center-block">
                                                    <input type="file" id="file">
                                                    <span class="file-custom"></span>
                                                </label>
                                            </div>
                                            <div class="col-2 col-xl-1">
                                                <button type="button" data-repeater-delete class="btn btn-icon btn-info btn-danger mr-1"><i class="ft-x"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <button type="button" data-repeater-create class="btn btn-primary">
                                    <i class="ft-plus"></i> Add new file
                                </button>
                            </div>
                            <button class="btn btn-danger support-btn" type="cancel">Cancel</button>
                            <button class="btn btn-info support-btn" type="submit">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- // Form control repeater section end -->



